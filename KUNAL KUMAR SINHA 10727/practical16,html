<!DOCTYPE html>
<html>
<head>
  <style>
    .hidden {
      display: none;
    }
    .highlight {
      color: white;
      background-color: blue;
      padding: 5px;
    }
  </style>
</head>
<body>

<p id="box">This text can be hidden or shown</p>
<button onclick="toggleBox()">Show / Hide</button>
<button onclick="toggleColor()">Toggle Color</button>

<script>
  function toggleBox() {
    document.getElementById("box").classList.toggle("hidden");
  }

  function toggleColor() {
    document.getElementById("box").classList.toggle("highlight");
  }
</script>

</body>
</html>
